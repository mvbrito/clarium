@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrativa/Views/Shared/_Layout.cshtml";
}
@using Site.Areas.Cadastro.Models
@model TipoSolicitacaoViewModel

<div>
    <div>
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">
                    Tipo de Solicitação
                </h3>
            </div>
        </div>
        <!-- /.row -->

        <div class="panel-group" role="tablist" aria-multiselectable="true">
            <div class="panel panel-primary">
                <div class="panel-heading" role="tab">
                    <h4 class="panel-title">
                        <i class="fa fa-plus-circle"></i>&nbsp;Novo Tipo de Solicitação
                    </h4>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                    <div class="panel-body">
                        @Html.ActionLink("Cadastrar", "Edit", "TipoSolicitacao", null, null)
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="panel-group" role="tablist" aria-multiselectable="true">
            <div class="panel panel-primary">
                <div class="panel-heading" role="tab">
                    <h4 class="panel-title">
                        <i class="fa fa-search"></i>&nbsp;Pesquisa
                    </h4>
                </div>
                <div class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                    <div class="panel-body">
                        <form action='@Url.Action("Buscar", "TipoSolicitacao")' method="get" class="form-control-static col-md-12 center-block" novalidate>
                            <div class="form-group col-lg-7">
                                <label>Descrição</label>
                                <input type="text" name="descricao" value="" class="form-control" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                            <div class="form-group col-lg-2">
                                <label>Ativo</label>
                                <select class="form-control" name="ativo">
                                    <option value="true">Sim</option>
                                    <option value="false">Não</option>
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Pesquisar</label><br />
                                <input type="submit" class="btn btn-default" value="Buscar" name="button" />&nbsp;
                                <input type="reset" class="btn btn-default" value="Limpar" onclick=" ShowHideDIV('dvGrid'); ">
                                <input type="submit" class="btn btn-default" value="Exportar" name="button" />&nbsp;
                            </div>
                            <div class="table-responsive col-lg-12" id="dvGrid" style=@ViewBag.MyInitialValue>
                                @{
                                    var TipoSolicitacao = Model;
                                }

                                @{
                                    var grid = new WebGrid(TipoSolicitacao.ListaTipoSolicitacoes, canPage: true, rowsPerPage: 10, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");}
                                <div>
                                    @if (TipoSolicitacao.ListaTipoSolicitacoes.Count > 0)
                                    {

                                        @grid.GetHtml(mode: WebGridPagerModes.All, firstText: "<< Primeiro", previousText: "< Anterior", nextText: "Próximo >", lastText: "Último >>", tableStyle: "table table-bordered table-hover table-striped",
                                        headerStyle: "header",
                                        alternatingRowStyle: "alt",
                                        selectedRowStyle: "select",
                                        columns: grid.Columns(
                                            grid.Column("Id", " Id"),
                                            grid.Column("Descricao", " Descrição"),
                                            grid.Column("AtivoGrid", "Ativo", style: "form-group col-lg-1"),
                                            grid.Column("Editar", format: @<text>
                                                @Html.Raw(@Html.ActionLink("[replacetext]", "RetornarPorId", new { Id = item.Id }).ToHtmlString().Replace("[replacetext]", "<i class='fa fa-edit'></i>"))
                                            </text>, style: "form-group col-lg-1"),
                                            grid.Column("Excluir", format: @<text>
                                            @Html.Raw(@Html.ActionLink("[replacetext]", "Excluir", new { Id = item.Id, tipo = "TipoSolicitacao" }).ToHtmlString().Replace("[replacetext]", "<i class='fa fa-trash-o'></i>"))
                                            </text>, style: "form-group col-lg-1")
                                                                                                                                                        ))
                                        if (grid.HasSelection)
                                        {
                                            TipoSolicitacao = (TipoSolicitacaoViewModel)grid.Rows[grid.SelectedIndex].Value;
                                            <b>Id</b> @TipoSolicitacao.Id<br />
                                            <b>Descricao</b>  @TipoSolicitacao.Descricao<br />
                                            <b>Ativo</b> @TipoSolicitacao.AtivoGrid<br />
                                        }
                                    }
                                    else
                                    {
                                        <div class="alert alert-info col-lg-12">
                                            <strong>Ops!</strong>
                                            Nenhum Resultado Encontrado.
                                        </div>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
<script>
    function ShowHideDIV(nomeDiv) {
        document.getElementById(nomeDiv).style.display = "none";
    }
</script>
