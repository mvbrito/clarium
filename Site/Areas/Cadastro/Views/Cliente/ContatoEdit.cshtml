@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administrativa/Views/Shared/_Layout.cshtml";
}
@using Millenium.Util
@model Site.Areas.Cadastro.Models.ContatoViewModel

<div>
    <div>
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">
                    Contato
                </h3>
            </div>
        </div>
        <!-- /.row -->

        <div class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
                <div class="form-group" style="text-align:right">
                    <a href=@ViewBag.ActionVoltar>Voltar</a>&nbsp;
                </div>
            </div>
        </div>

        <div class="panel-group" role="tablist" aria-multiselectable="true">
            <div class="panel panel-primary">
                <div class="panel-heading" role="tab">
                    <h4 class="panel-title">
                        <i class="fa fa-pencil"></i>&nbsp;Cadastro & Edição
                    </h4>
                </div>
                <div class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">
                        @using (Html.BeginForm("SalvarContato", "Cliente", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-control-static col-md-12 center-block" }))
                        {
                            @Html.HiddenFor(m => m.IdCliente)
                            @Html.HiddenFor(m => m.IdContato)

                            <div class="form-group has-error col-lg-10">
                                <label>Nome</label>
                                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @maxlength = 30, onkeyup = "this.value = this.value.toUpperCase();", required = "required" }).DisableIf(() => Model.IdCliente == 0)
                            </div>
                            <div class="form-group has-error col-lg-3">
                                <label>Celular</label>
                                @Html.TextBoxFor(m => m.Celular, new { @class = "form-control", @maxlength = 15, onkeyup = "formataCelular(event);", required = "required" }).DisableIf(() => Model.IdCliente == 0)
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Celular Secundário</label>
                                @Html.TextBoxFor(m => m.CelularSecundario, new { @class = "form-control", @maxlength = 15, onkeyup = "formataCelular(event);" }).DisableIf(() => Model.IdCliente == 0)
                            </div>
                            <div class="form-group has-error col-lg-4">
                                <label>Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @maxlength = 255, required = "required" }).DisableIf(() => Model.IdCliente == 0)
                            </div>
                            <div class="form-group col-lg-12">
                                <div class="form-group col-lg-12" style="text-align:right">
                                    <input type="submit" class="btn btn-default" value="Salvar" id="SalvarContato" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
