@{
    ViewBag.Title = "Excluir";
    Layout = "~/Areas/Administrativa/Views/Shared/_Layout.cshtml";
}
@model Site.Areas.Administrativa.Models.ExcluirViewModel
           
<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i>@Html.RouteLink("Home", "Administrativa_default", new { controller = "Home", action = "Index" })</li>
        <li class="active">Cadastro</li>
    </ol>
    <h1>
        Excluir @ViewBag.NomeTela
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-10">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box box-primary" align="right">
                    <a href=@ViewBag.ActionVoltar>Voltar</a>&nbsp;
                </div><!-- /.box-header -->
                <div class="panel-body">
                    <form action="@ViewBag.ActionExcluir" method="post" class="form-control-static col-md-6 center-block">
                        @Html.HiddenFor(m => m.IdExclusao)
                        <div class="form-group has-error col-lg-12">
                            <label class="control-label">Deseja realmente Excluir esse registro?</label>
                            <label class="control-label">Ele não poderá ser utilizado novamente.</label>
                            <br /><br /><br />
                            <input type="submit" class="btn btn-default" value="Não" name="nao" id="nao" />&nbsp;
                            <input type="submit" class="btn btn-default" value="Sim" name="sim" id="sim" />
                            <br /><br /><br />
                            <div class="form-group has-success">
                                <label class="control-label">@ViewBag.Mensagem</label>
                            </div>
                        </div>
                    </form>
                </div>

            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div>   <!-- /.row -->
</section><!-- /.content -->
